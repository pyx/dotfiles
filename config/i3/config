# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!
# Basic Settings -------------------------------------------------- {{{1
# Modifier
set $mod Mod4
# Fonts
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
font xft:Monofur 10

# i3 Specific ----------------------------------------------------- {{{1
# reload the configuration file
bindsym $mod+Shift+r reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Control+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+q exec "i3-nagbar -t warning -m 'Exit?' -b 'Yes, exit i3' 'i3-msg exit'"

# Statusbar ------------------------------------------------------- {{{1
bar {
	mode hide
	modifier $mod
	status_command i3status
}

# Layout Management ----------------------------------------------- {{{1
# split in horizontal orientation
bindsym $mod+Shift+v split h

# split in vertical orientation
bindsym $mod+v split v

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Window Management ----------------------------------------------- {{{1
# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# kill focused window
bindsym $mod+Shift+c kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindcode $mod+d focus child

# Workspace Management -------------------------------------------- {{{1
# change workspace
bindsym $mod+Left workspace prev_on_output
bindsym $mod+Right workspace next_on_output
bindsym $mod+Up workspace prev
bindsym $mod+Down workspace next

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# switching back and forth
workspace_auto_back_and_forth yes

# send to scratchpad
bindsym $mod+Shift+minus move scratchpad
# show scratchpad
bindsym $mod+minus scratchpad show

# Output Management ----------------------------------------------- {{{1
# focus output
bindsym $mod+Shift+Left focus output left
bindsym $mod+Shift+Right focus output right
bindsym $mod+Shift+Up focus output up
bindsym $mod+Shift+Down focus output down

# Default Application --------------------------------------------- {{{1
# terminal
bindsym $mod+Return exec gnome-terminal

# app launcher
bindsym $mod+d exec dmenu_run

# lock screen
bindsym $mod+Escape exec i3lock -d -c 000000 -i ~/.background.lock

# screenshot
bindsym $mod+F12 exec scrot -d 3

# Mode "resize" --------------------------------------------------- {{{1
mode "resize" {
	bindsym h resize shrink width 10 px or 10 ppt
	bindsym j resize grow height 10 px or 10 ppt
	bindsym k resize shrink height 10 px or 10 ppt
	bindsym l resize grow width 10 px or 10 ppt

	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Down resize grow height 10 px or 10 ppt
	bindsym Up resize shrink height 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt

	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Mode "launch" --------------------------------------------------- {{{1
mode "launch" {
	# hotkey to launch
	# Shift + hotkey to launch then exit launch mode
	# a: Audacious
	bindsym a exec audacious
	bindsym Shift+a exec audacious; mode "default"
	# c: google-Chrome
	bindsym c exec google-chrome
	bindsym Shift+c exec google-chrome; mode "default"
	# d: Dwb
	bindsym d exec dwb
	bindsym Shift+d exec dwb; mode "default"
	# e: Evince
	bindsym e exec evince
	bindsym Shift+e exec evince; mode "default"
	# f: Firfox
	bindsym f exec firefox
	bindsym Shift+f exec firefox; mode "default"
	# g: Gimp
	bindsym g exec gimp
	bindsym Shift+g exec gimp; mode "default"
	# h: devHelp
	bindsym h exec devhelp
	bindsym Shift+h exec devhelp; mode "default"
	# k: K3b
	bindsym k exec k3b
	bindsym Shift+k exec k3b; mode "default"
	# m: Meld
	bindsym m exec meld
	bindsym Shift+m exec meld; mode "default"
	# n: Nautilus
	bindsym n exec nautilus
	bindsym Shift+n exec nautilus; mode "default"
	# o: Okular
	bindsym o exec okular
	bindsym Shift+o exec okular; mode "default"
	# r: nemiveR
	bindsym r exec nemiver
	bindsym Shift+r exec nemiver; mode "default"
	# s: Smplayer
	bindsym s exec smplayer
	bindsym Shift+s exec smplayer; mode "default"
	# t: Thunar
	bindsym t exec thunar
	bindsym Shift+t exec thunar; mode "default"
	# u: Uzbl
	bindsym u exec uzbl-tabbed
	bindsym Shift+u exec uzbl-tabbed; mode "default"
	# v: gVim
	bindsym v exec gvim
	bindsym Shift+v exec gvim; mode "default"
	# z: Zathura
	bindsym z exec zathura
	bindsym Shift+z exec zathura; mode "default"
	# Enter, Escape or backslash: back to normal
	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym backslash mode "default"
	bindsym $mod+backslash mode "default"
}

bindsym $mod+backslash mode "launch"

# Specific Window Assignment -------------------------------------- {{{1
# 1: Web Browsers
assign [class="Dwb"] → 1
assign [class="Firefox"] → 1
assign [class="Google-chrome"] → 1
assign [class="Uzbl"] → 1

# 2: editors
assign [class="Gvim"] → 2

# 3: terminal enumerator
assign [class="Gnome-terminal"] → 3
assign [class="Nemiver"] → 3

# 4: documents
assign [class="Devhelp"] → 4
assign [class="Evince"] → 4
assign [class="Okular"] → 4
assign [class="Zathura"] → 4

# 5: file managers
assign [class="K3b"] → 5
assign [class="Nautilus"] → 5
assign [class="Thunar"] → 5

# 6: CG
assign [class="Eog"] → 6
assign [class="Gimp"] → 6

# 7: multimedia
assign [class="Audacious"] → 7
for_window [class="Audacious"] floating enable
assign [class="Smplayer"] → 7
for_window [class="Smplayer"] floating enable

# 8: others
assign [class="Amule"] → 8
assign [class="Deluge"] → 8

# Autostart ------------------------------------------------------- {{{1
exec --no-startup-id ~/.scripts/start-i3.sh
